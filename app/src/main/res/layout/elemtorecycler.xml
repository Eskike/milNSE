<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tituloicono"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignBaseline="@+id/et_valoracion"
        android:layout_alignBottom="@+id/et_valoracion"
        android:layout_alignEnd="@+id/image_lista"
        android:layout_alignRight="@+id/image_lista"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:paddingLeft="10dp"
        android:text="vista"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/vista"
        android:id="@+id/image_lista">

    </ImageView>

    <RatingBar
        android:id="@+id/MyRatingBar"
        style="@style/MyRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_lista"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:stepSize="1"
        android:numStars="7" />
    <TextView
        android:id="@+id/txt_valoracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenido"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/MyRatingBar"/>

    <EditText
        android:id="@+id/et_valoracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/txt_valoracion"
        android:layout_toStartOf="@id/txt_valoracion"
        android:layout_alignLeft="@+id/MyRatingBar"
        android:layout_alignStart="@+id/MyRatingBar"
        android:layout_below="@+id/MyRatingBar"
        android:hint="observaciones" />


</RelativeLayout>