<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="72dp"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/vista"
        android:id="@+id/image_lista">

    </ImageView>

    <RatingBar
        android:id="@+id/MyRatingBar"
        style="@style/MyRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_lista"
        android:layout_marginLeft="15dp"
        android:numStars="7" />
    <TextView
        android:id="@+id/txt_valoracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenido"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/MyRatingBar"/>

    <TextView
        android:id="@+id/et_valoracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MyRatingBar"
        android:layout_alignStart="@+id/MyRatingBar"
        android:layout_below="@+id/MyRatingBar"
        android:hint="observaciones" />


</RelativeLayout>